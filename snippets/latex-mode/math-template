\documentclass[11pt, oneside]{amsart}
\title{$1}
%\author{Jared Ross, 260 273 72 }

%%% Packages

%% Typography
\usepackage{graphicx, hyperref, geometry, sidecap, enumitem, framed, float, setspace, comment}
\usepackage[all]{nowidow} 
% \usepackage[parfill]{parskip} % Newline paras, instead of indent.

%% Math
\usepackage{amssymb, mathtools, xfrac, cool, cancel, gauss, permute}

%% Misc
\usepackage{todonotes}

%%% General Setup

%% Page and typographical Setup
\geometry{a4paper}
\singlespacing{}
%\renewcommand{\thesubsection}{\thesection\enspace\alph{subsection}}	% make subsections enumerated with letters
%\renewcommand{\thesubsubsection}{\thesubsection\enspace\roman{subsubsection}}

%% Graphics Setup
\graphicspath{{./images/}}

%%% Math Setup

%% Math Typography Setup
\mathtoolsset{showonlyrefs}

%% Wrapping operations
\DeclarePairedDelimiter\abs{\lvert}{\rvert}
\DeclarePairedDelimiter\norm{\lVert}{\rVert}
\DeclarePairedDelimiter\innerp{\langle}{\rangle}

%% Operators
\DeclareMathOperator{\diag}{diag} \DeclareMathOperator{\sgn}{sgn}
\DeclareMathOperator{\proj}{proj}
\DeclareMathOperator{\nullSpace}{null}
\DeclareMathOperator{\spanVectors}{span}

%% Globals
\def\reals{\mathbb{R}}
\def\rationals{\mathbb{Q}}
\def\integers{\mathbb{Z}}
\def\naturals{\mathbb{N}}
\def\units{\text{units}}

%% Environments
\newtheorem{thm}{Theorem}[subsection]
\newtheorem{lem}[thm]{Lemma}

\theoremstyle{definition}
\newtheorem{defn}[thm]{Definition}
\newtheorem{example}[thm]{Example}

%%% The Document

\begin{document}
\maketitle

